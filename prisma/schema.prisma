model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  password  String
  role      String   @default("user") // "admin" or "user"
  status    String   @default("active") // "active" or "disabled"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Voter {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  sl_no           String
  name            String
  voter_id        String
  father          String
  mother          String
  occupation      String    @default("N/A")
  dob             DateTime?
  address         String
  voter_area_code String
  status          String    @default("Active")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([voter_area_code])
  @@index([name])
  @@index([status])
  @@map("voters")
}

model VoterArea {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  district          String
  upazila_thana     String
  union_paurashava  String
  ward_number       String
  voter_area_name   String
  voter_area_code   String    @unique
  post_office       String
  post_code         String
  total_voters      Int       @default(0)
  total_male_voters Int       @default(0)
  publication_date  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("voterareas")
}
